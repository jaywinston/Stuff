/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    // Put your code here:
	And(a=a, b=b, out=aAndb);
	Or(a=a, b=b, out=aOrb);
	Not(in=aOrb, out=NotaOrb);
	Or(a=aAndb, b=NotaOrb, out=AndOrOr);
	Not(in=AndOrOr, out=out);
}
