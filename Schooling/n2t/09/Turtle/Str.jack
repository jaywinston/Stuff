class Str {


    function int MAXLEN() {
        return 64;  /* magic number! */
    }


    function boolean eq(String s, String t) {
        var int i;

        if (s = t) {
            return true;
        }

        if ( (s=null) | (t=null) ) {
            return false;
        }

        if (~(s.length() = t.length())) {
            return false;
        }

        let i = 0;
        while (i < s.length()) {
            if (~(s.charAt(i) = t.charAt(i))) {
                return false;
            }
            let i = i + 1;
        }

        return true;
    }


    function String format(String f, Array arg) {
        var boolean continue;
        var char c;
        var int a, i, j, tLen;
        var String s, t;

        if (f.length() < 2) {
            return Str.dup(f);
        }

        let s = String.new(Str.MAXLEN());
        let t = null;

        let a = 0;
        let i = 0;
        while (i < f.length()) {

            let c = f.charAt(i);
            let continue = ~(c = 37);

            let i = i + 1;
            while ( (i<f.length()) & continue ) {
                do s.appendChar(c);
                let c = f.charAt(i);
                let continue = ~(c = 37);
                let i = i + 1;
            }

            if (i < f.length()) {

                let c = f.charAt(i);

                if (c = 68) {
                    let t = String.new(6);
                    do t.setInt(arg[a]);
                } else { if (c = 83) {
                    let t = Str.dup(arg[a]);
                } else { if (c = 67) {
                    do s.appendChar(arg[a]);
                } else { if (i < Str.MAXLEN()) {
                    do s.appendChar(c);
                }}}}

                if (~(t = null)) {
                    do Str.cat(s, t);
                    do t.dispose();
                    let t = null;
                    let a = a + 1;
                }

                let i = i + 1;

            } else {
                do s.appendChar(c);
            }
        }

        return s;
    }


    function int cat(String s, String t) {
        var int i;

        let i = 0;
        while (i < t.length()) {
            do s.appendChar(t.charAt(i));
            let i = i + 1;
        }

        return i + s.length();
    }


    function String dup(String s) {
        var int i;
        var String t;

        if (s = null) {
            return null;
        }

        let t = String.new(s.length());
        let i = 0;

        while (i < s.length()) {
            do t.appendChar(s.charAt(i));
            let i = i + 1;
        }

        return t;
    }


    function void shift(String s, int off, int i) {

        if ( (s.length()=0) | (s.length()<off) ) {
            return;
        }

        let i = i + off;
        while (i < s.length()) {
            do s.setCharAt(i-off, s.charAt(i));
            let i = i + 1;
        }

        while (off > 0) {
            do s.eraseLastChar();
            let off = off - 1;
        }

        return;
    }


    function int lskip(String s, char c, int i) {

        while (i < s.length()) {
            if (~(s.charAt(i) = c)) {
                return i;
            }
            let i = i + 1;
        }

        return i;
    }

}
