class Console {

    field Banner banner;
    field Terminal term;
    field Canvas canv;

    constructor Console new() {

        let banner = Banner.new(
                        "                       Turtle 0.01",
                        0, 0, 1, 64);
        let term = Terminal.new(2, 1, 20, 30);
        let canv = Canvas.new(2, 32, 20, 31);

        do try(canv.exec(lib.NULLS()));

        return this;
    }

    method void run() {
        while (true) {
            do try(canv.exec(term.read()));
        }
        return;
    }

    method void try(String s) {
        do term.print(s);
        return;
    }

}
